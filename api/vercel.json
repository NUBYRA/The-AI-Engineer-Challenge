{
    "version": 2,
    "builds": [
      { 
        "src": "app.py", 
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb"
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "app.py" }
    ],
    "buildCommand": "apt-get update && apt-get install -y tesseract-ocr poppler-utils libtesseract-dev"
  } 